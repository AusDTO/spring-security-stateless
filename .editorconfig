# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
continuation_indent_size = 8
end_of_line = lf
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.{js,json}]
indent_size = 2

[.*rc]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[Makefile*]
indent_style = tab
indent_size = 8
continuation_indent_size = 8

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.jade]
trim_trailing_whitespace = false
